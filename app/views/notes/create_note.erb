
<div class="row col-lg-6 col-lg-offset-3 col-sm-12" style="margin-top: 5%">
  <form class="form-horizontal" action="/notes" method="POST" >
  <fieldset>
    <legend>Add a Note</legend>
    <div class="form-group">
      <label for="topic" class="col-sm-2 control-label">Topic</label>
      <div class="col-sm-10">
        <input list="topics" class="form-control" name="topic" id="topic" placeholder="Topic" required>
        <datalist id="topics">
          <option value="Ruby">
          <option value="CSS">
          <option value="Rails">
          <option value="C">
          <option value="C-Sharp">
          <option value="C++">
          <option value="Java">
          <option value="Java-Script">
          <option value="Scala">
          <option value="Fortran">
          <option value="Lisp">
          <option value="Cobol">
        </datalist> 
      </div>  
    </div>

    <div class="form-group">
      <label for="content" class="col-sm-2 control-label">Content</label>
      <div class="col-sm-10">
        <textarea name="content" class="form-control" id="content" placeholder="Content" required></textarea>
      </div>  
    </div>
    
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <a href="/"><button type="button" class="btn btn-default" style="margin-right: 10px">Cancel</button></a>
        <button type="submit" class="btn btn-primary">Add</button>
      </div>      
    </div>
  </fieldset>
  </form>
</div>
