<h1><%= current_user.username %>'s Dashboard</h1>

<form class="form-horizontal" action="/notes/<%=@note.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <fieldset>
  	<legend class="col-xs-12">Edit the note</legend>
  	<div class="form-group">
  	<label for="content" control-label></label>
  	  <div class="col-xs-12">
  	    <input type="text" name="note[content]" id="content" value="<%= @note.content %>">
  	  </div>
  	</div>

  	<div class="form-group">
  	  <label for="topic" class="" control-label></label>
  	  <div class="col-xs-12">
  	      <% Topic.all.each do |topic| %>
    	<label><%= topic.name %></label>
    	<input type="checkbox" name="note[topic_ids][]" value="<%= topic.id %>" id="<%= topic.name %>" <%='checked' if @note.topics.include?(topic) %>>
  		<% end %>
  	  	
  	  </div>
  		
  	</div>
  </fieldset>
  </form>




<form method="post" action="/notes/<%=@note.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
<textarea name="note[content]"><%= @note.content %></textarea><br><br>
  <% Topic.all.each do |topic| %>
    <label><%= topic.name %></label>
    <input type="checkbox" name="note[topic_ids][]" value="<%= topic.id %>" id="<%= topic.name %>" <%='checked' if @note.topics.include?(topic) %>>
  <% end %>
 <br><br><label>Add new topic:</label>
 <input type="text" id="new_topic" name="topic[name]"><br></br>
 <a href="/"><button type="button" class="btn btn-default" style="margin-right: 10px">Cancel</button></a>
  <input class="btn btn-success btn" type="submit" style="margin-right: 10px"value="Update">
  <a class="btn btn-danger" href="/notes/<%=@note.id%>/delete">Delete</a>
</form>