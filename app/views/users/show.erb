<div class="row">
  <div class="col-xs-12">
    <h1><%= current_user.username %>'s Dashboard</h1>
  </div>
</div>

<!--Display flash[:message] if available -->
<% if flash.has?(:message) %>
<div class="alert alert-dismissible alert-success animated fadeInDown">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:message] %></p>
</div>
<% end %>

<!--Display created notes-->
<% if !current_user.notes.empty? %>
<h3>List of notes:</h3>

<div class="row notes">
  <%current_user.notes.reverse.each do |note| %>
    <div class="col-xs-4 well" style="margin: 5px; border: 1px;width: 32%; padding: 15px;">
      <h6><%= note.content %></h6>

      <!--Topics-->
      <%note.topics.each do |topic|%>
       <a href="/topics/<%= topic.id %>"> <strong class="label label-info">#<%= topic.name %></strong></a>
      <%end%>

      <p><a class="btn btn-default btn-xs" style="margin-right: 10px" href="/notes/<%=note.id%>/edit"><i class="glyphicon glyphicon-edit"></i></a>
      <a class="btn btn-default btn-xs" href="/notes/<%=note.id%>/delete"><i class="glyphicon glyphicon-trash"></i></a></p>
    </div>
  <% end %>
</div><!--row-->
<br>
<% end %>

<!--Add notes-->
  <div class="row">
    <div class="col-xs-12">
    <a class="btn btn-primary" href="/notes/new">Add Note</a>
    </div>
  </div>

